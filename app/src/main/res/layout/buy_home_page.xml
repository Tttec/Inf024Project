<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainconstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1">

            <Button
                android:id="@+id/car_cat_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/icon_car_catagory"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></Button>

            <Button
                android:id="@+id/baby_cat_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/icon_baby_catagory"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.33"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"></Button>

            <Button
                android:id="@+id/cloth_cat_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/icon_clothes_catagory"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.66"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"></Button>

            <Button
                android:id="@+id/furt_cat_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/icon_furniture_catagory"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></Button>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_1"
            android:layout_width="352dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.7">

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D6D6D6"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></SearchView>

            <Button
                android:id="@+id/button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.97"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@android:string/untitled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:layout_constraintVertical_bias="0.15"
            app:srcCompat="@drawable/item_image"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/araba"
            android:textColor="#FFFFFF"
            app:fontFamily="@font/corporate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:layout_constraintVertical_bias="0.015" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bebek"
            android:textColor="#FFFFFF"
            app:fontFamily="@font/corporate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
            app:layout_constraintHorizontal_bias="0.34"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:layout_constraintVertical_bias="0.015" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/giyim"
            android:textColor="#FFFFFF"
            app:fontFamily="@font/corporate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:layout_constraintVertical_bias="0.015" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ev_gere_leri"
            android:textColor="#FFFFFF"
            app:fontFamily="@font/corporate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
            app:layout_constraintHorizontal_bias="1.04"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:layout_constraintVertical_bias="0.015" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#D6D6D6"
            android:contentDescription="@android:string/untitled"
            app:layout_constraintBottom_toBottomOf="@+id/mainconstraint"
            app:layout_constraintEnd_toEndOf="@+id/mainconstraint"
            app:layout_constraintStart_toStartOf="@+id/mainconstraint"
            app:layout_constraintTop_toTopOf="@+id/mainconstraint"
            app:layout_constraintVertical_bias="1"></ImageView>

        <Button
            android:id="@+id/home_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_home"
            app:layout_constraintBottom_toBottomOf="@+id/mainconstraint"
            app:layout_constraintEnd_toEndOf="@+id/mainconstraint"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintVertical_bias="0.99"
            app:layout_constraintStart_toStartOf="@+id/mainconstraint"
            app:layout_constraintTop_toTopOf="@+id/mainconstraint"></Button>

        <Button
            android:id="@+id/bell_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_bell"
            app:layout_constraintBottom_toBottomOf="@+id/mainconstraint"
            app:layout_constraintEnd_toEndOf="@+id/mainconstraint"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintVertical_bias="0.99"
            app:layout_constraintStart_toStartOf="@+id/mainconstraint"
            app:layout_constraintTop_toTopOf="@+id/mainconstraint"></Button>

        <Button
            android:id="@+id/camera_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_camera"
            app:layout_constraintBottom_toBottomOf="@+id/mainconstraint"
            app:layout_constraintEnd_toEndOf="@+id/mainconstraint"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.99"
            app:layout_constraintStart_toStartOf="@+id/mainconstraint"
            app:layout_constraintTop_toTopOf="@+id/mainconstraint"></Button>

        <Button
            android:id="@+id/menu_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_menu"
            app:layout_constraintBottom_toBottomOf="@+id/mainconstraint"
            app:layout_constraintEnd_toEndOf="@+id/mainconstraint"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintVertical_bias="0.99"
            app:layout_constraintStart_toStartOf="@+id/mainconstraint"
            app:layout_constraintTop_toTopOf="@+id/mainconstraint"></Button>

        <Button
            android:id="@+id/profile_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_profile"
            app:layout_constraintBottom_toBottomOf="@+id/mainconstraint"
            app:layout_constraintEnd_toEndOf="@+id/mainconstraint"
            app:layout_constraintHorizontal_bias="0.98"
            app:layout_constraintVertical_bias="0.99"
            app:layout_constraintStart_toStartOf="@+id/mainconstraint"
            app:layout_constraintTop_toTopOf="@+id/mainconstraint"></Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>